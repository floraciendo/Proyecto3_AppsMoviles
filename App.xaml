<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FinanceTracker"
             xmlns:converters="clr-namespace:FinanceTracker.Converters"
             x:Class="FinanceTracker.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:ColorConverter x:Key="TransactionColor" />
            <converters:FormatConverter x:Key="TransactionFormat" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
